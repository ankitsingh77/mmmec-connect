<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/notif_image"
        android:layout_width="@dimen/thumbnail_width"
        android:layout_height="@dimen/thumbnail_height"
        android:src="@drawable/loading_image"
        android:contentDescription="@string/pimage" />

    <TextView
        android:id="@+id/notif_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/notif_image"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/notif_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notif_desc"
        android:layout_below="@+id/notif_desc"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
