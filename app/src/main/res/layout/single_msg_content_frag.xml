<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="3dp"
     >
     
    <ImageView
        android:id="@+id/img_msg_frag"
        android:layout_width="@dimen/thumbnail_small_width"
        android:layout_height="@dimen/thumbnail_small_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/loading_image"
        android:contentDescription="@string/pimage" />

    <TextView
        android:id="@+id/msg_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_alignTop="@+id/img_msg_frag"
        android:layout_toRightOf="@+id/img_msg_frag"
        android:textAppearance="?android:attr/textAppearanceMedium"
         />

  
        
    </RelativeLayout>