<LinearLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" 
android:layout_width="fill_parent"
android:layout_height="fill_parent">

<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="0dip"
     android:id="@+id/scrllPrev" 
    android:layout_weight="1"  >
    <LinearLayout 
        android:orientation="vertical"
        android:text="Previous Conversation" 
        android:id="@+id/llPrev"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:paddingLeft="5dp" 
        android:paddingRight="5dp" 
        android:paddingTop="5dp" />
</ScrollView>

<LinearLayout 
    android:id="@+id/linearLayout1"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:paddingLeft="5dp" 
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:baselineAligned="true">
    <EditText android:layout_weight="1" android:id="@+id/et_msg" android:singleLine="true"
        android:layout_height="45dp" android:layout_width="0dip">
    </EditText>
    <Button android:text="Send"
        android:layout_height="45dp" android:layout_width="125dp"
        android:id="@+id/bt_send_msg"></Button>
</LinearLayout>
</LinearLayout>