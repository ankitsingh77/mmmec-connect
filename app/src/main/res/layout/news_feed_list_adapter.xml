            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp" />

        <RelativeLayout
            android:id="@+id/list_adapter_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/list_adapter_profile_pic" >

            <TextView
                android:id="@+id/list_adapter_posted_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="" />

            <TextView
                android:id="@+id/list_adapter_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_adapter_posted_place"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:text="Kunal Singh" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_adapter_action_type_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_adapter_main_layout"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/list_adapter_profile_pic"
            android:visibility="gone" >

            <TextView
                android:id="@+id/list_adapter_txt_1_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Hey !\nFrom Android!" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_adapter_action_type_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_adapter_main_layout"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/list_adapter_profile_pic"
            android:visibility="gone" >

            <TextView
                android:id="@+id/list_adapter_txt_6_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Hey !\nFrom Android!" />

            <ImageView
                android:id="@+id/list_adapter_img_6_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
