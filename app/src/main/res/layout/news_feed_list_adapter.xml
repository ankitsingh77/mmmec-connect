                    android:text="http://www.ted.com/talks/gail_reed_where_to_train" />

                <TextView
                    android:id="@+id/list_adapter_txt_1600_2_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/list_adapter_txt_1600_2_status"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/list_adapter_img_1600_2_video_pic"
