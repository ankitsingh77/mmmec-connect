        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_adapter_action_type_2500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_adapter_main_layout"
            android:layout_marginLeft="5dp"
