            android:visibility="gone" >

            <TextView
                android:id="@+id/list_adapter_txt_1600_1_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="http://www.ted.com/talks/gail_reed_where_to_train" />

            <TextView
                android:id="@+id/list_adapter_txt_1600_1_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_adapter_txt_1600_1_status"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:text="Gail Reed: Where to train the world&apos;s doctors? Cuba. | Talk Video | TED.com"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/list_adapter_txt_1600_1_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_adapter_txt_1600_1_heading"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:text="www.ted.com"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/list_adapter_txt_1600_1_descrption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_adapter_txt_1600_1_link"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:text="www.ted.com"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_adapter_action_type_1600_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_adapter_main_layout"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/list_adapter_profile_pic"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/list_adapter_action_type_1600_2_inner_rl"
