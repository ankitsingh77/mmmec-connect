                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/list_adapter_img_1600_2_video_pic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/list_adapter_txt_1600_2_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/list_adapter_img_1600_2_video_pic"
