                android:layout_marginTop="5dp" />

            <EditText
                android:id="@+id/list_adapter_ed_2800_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_adapter_txt_2800_options_heading"
                android:layout_marginTop="5dp"
                android:hint="+Add Answer"
                android:maxLines="3"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_adapter_action_type_2400"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_adapter_main_layout"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/list_adapter_profile_pic"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/list_adapter_txt_2400_image_view"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <LinearLayout
                android:id="@+id/list_adapter_txt_2400_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/list_adapter_txt_2400_image_view"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/list_adapter_txt_2400_for"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="" />

                <TextView
                    android:id="@+id/list_adapter_txt_2400_praise_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:text="" />
            </LinearLayout>

            <TextView
                android:id="@+id/list_adapter_ed_2400_praise_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_adapter_txt_2400_heading"
                android:layout_marginTop="5dp"
                android:maxLines="3"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list_adapter_action_type_2600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
